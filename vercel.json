{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "50mb" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)\\.(js|css|html|ico)$",
      "headers": { "cache-control": "s-maxage=31536000, immutable" },
      "dest": "/$1.$2"
    },
    {
      "src": "/",
      "dest": "app.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production"
  },
  "build": {
    "env": {
      "FLASK_APP": "app.py"
    }
  }
}
